<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.ChooseLevelActivity">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="@drawable/win_board"
        android:layout_height="90dp"
        android:text="Choose level"
        android:gravity="center"
        android:textSize="35sp"
        android:fontFamily="@font/font1"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="22dp"
            android:id="@+id/easy_view"
            app:cardBackgroundColor="#47455D"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Easy(3x3)"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="30sp"
                android:fontFamily="@font/font1"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#47455D"
            android:layout_marginVertical="15dp"
            app:cardCornerRadius="22dp"
            android:id="@+id/medium_view"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Medium(4x4)"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="30sp"
                android:fontFamily="@font/font1"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="22dp"
            android:id="@+id/hard_view"
            app:cardBackgroundColor="#47455D"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:text="Hard(5x5)"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="30sp"
                android:fontFamily="@font/font1"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>